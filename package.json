{
  "name": "native-signage-player",
  "version": "0.0.1",
  "description": "An easy way to show multiple webpages in one application.",
  "main": "main.js",
  "scripts": {
    "neo-start": "cross-env NODE_ENV=development neo start --port 4000",
    "neo-build": "cross-env NODE_ENV=production neo build --config 'config/webpack.overwrite.js'",
    "neo-test": "neo test",
    "start": "cross-env NODE_ENV=production electron .",
    "start-dev": "cross-env NODE_ENV=development electron .",
    "dev": "npm run start-dev",

    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",

    "package:osx": "npm run clean:osx && electron-packager . \"Native Signage Player\" --out=dist/osx --platform=darwin --arch=x64 --version=1.3.4 --ignore=dist --ignore=README.md --ignore=.gitignore --ignore=eslintrc --ignore=plan.txt --ignore=renderer.js",
    "package-osx": "./node_modules/.bin/electron-packager ./native-signage-player --all --out ~/Desktop/NativeSignagePlayer --version 0.0.1 --overwrite",
    "package": "electron-packager . --all"
  },
  "config": {
    "entry": "src/index.js",
    "ghooks": {
      "pre-commit": ""
    },
    "html": {
      "title": "Native Signage Player",
      "description": "An application to better display monitoring URL's",
      "author": "rickyH"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electron/electron-quick-start.git"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/electron/electron-quick-start/issues"
  },
  "homepage": "https://github.com/electron/electron-quick-start#readme",
  "devDependencies": {
    "concurrently": "^3.1.0",
    "cross-env": "^3.1.3",
    "electron": "^1.3.4",
    "mozilla-neo": "^2.5.0"
  },
  "dependencies": {
    "bootstrap": "4.0.0-alpha.2",
    "ghooks": "1.3.2",
    "immutable": "3.8.1",
    "react": "15.3.0",
    "react-addons-test-utils": "15.3.0",
    "react-dom": "15.3.0",
    "react-redux": "4.4.5",
    "react-router": "2.6.1",
    "react-router-redux": "4.0.5",
    "redux": "3.5.2",
    "redux-devtools": "3.3.1",
    "redux-devtools-chart-monitor": "1.4.2",
    "redux-devtools-dock-monitor": "1.1.1",
    "redux-devtools-log-monitor": "1.0.11",
    "redux-immutable": "3.0.6",
    "redux-logger": "2.6.1",
    "redux-slider-monitor": "1.0.7"
  }
}
